<!DOCTYPE html>
<html>
<head>
  <title>Álbuns</title>
</head>
<body>
  <h1>Gerenciar Álbuns</h1>
  <a href="/">Voltar para Home</a>

  <!-- Formulário para adicionar álbum -->
  <h2>Adicionar Novo Álbum</h2>
  <form action="/albuns/add" method="POST">
    <input type="text" name="title" placeholder="Título do Álbum" required>
    <input type="number" name="releaseYear" placeholder="Ano de Lançamento" required>
    <input type="text" name="cover" placeholder="URL da Capa">
    <textarea name="tracks" placeholder="Faixas (separadas por vírgulas)"></textarea>
    <button type="submit">Adicionar Álbum</button>
  </form>

  <h2>Buscar Álbum</h2>
<form action="/albuns/search" method="GET">
  <input type="text" name="title" placeholder="Título">
  <input type="text" name="artist" placeholder="Artista">
  <input type="text" name="genre" placeholder="Gênero">
  <button type="submit">Buscar</button>
</form>


  <!-- Lista de álbuns -->
  <h2>Lista de Álbuns</h2>
  <ul>
    <% albuns.forEach(album => { %>
      <li>
        <strong>Título:</strong> <%= album.title %> |
        <strong>Ano:</strong> <%= album.releaseYear %>
        <form action="/albuns/edit/<%= album.id %>" method="POST" style="display:inline;">
          <input type="text" name="title" value="<%= album.title %>" required>
          <input type="number" name="releaseYear" value="<%= album.releaseYear %>" required>
          <button type="submit">Editar</button>
        </form>
        <form action="/albuns/delete/<%= album.id %>" method="POST" style="display:inline;">
          <button type="submit">Remover</button>
        </form>
      </li>
    <% }); %>
  </ul>
  
</body>
</html>
